<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/skyBlue</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

    </style>

    <style name="smallButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/action_button_bg_color</item>
        <item name="android:textSize">@dimen/action_button_font_size</item>
        <item name="android:textColor">@color/action_button_text_color</item>
        <item name="android:radius">25sp</item>

    </style>

    <style name="largeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/least_margin</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:background">@color/action_button_bg_color</item>
        <item name="android:textSize">@dimen/action_button_font_size</item>
        <item name="android:textColor">@color/action_button_text_color</item>
        <item name="android:radius">25sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/input_text_size</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="subTitle">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="checkBox">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_small_text_size</item>
        <item name="android:textColor">@color/check_box_text_color</item>

    </style>

    <style name="flatButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/flat_button_text_size</item>
        <item name="android:textColor">@color/flat_button_text_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="label">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_text_size</item>
        <item name="android:textColor">@color/label_text_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="label_small">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/label_small_text_size</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="punchLine">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/punch_line_text_size</item>
        <item name="android:textColor">@color/punch_line_text_color</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="imageButton">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


</resources>
